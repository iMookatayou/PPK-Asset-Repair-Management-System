APP_NAME="Asset Repair Management"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

# Application locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database (mariadb service in compose)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=arm
DB_USERNAME=arm
DB_PASSWORD=arm

# Cache / Session / Queue
CACHE_STORE=redis
SESSION_DRIVER=database
QUEUE_CONNECTION=redis

# Redis (redis service in compose)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Filesystem
FILESYSTEM_DISK=local

# Mail (use log for local dev)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="Asset Repair"

# Horizon / Worker tuning (if added later)
# HORIZON_SUPERVISOR_MAX_PROCESSES=10

# Vite settings (served by node service)
VITE_APP_NAME="${APP_NAME}"
VITE_DEV_SERVER_URL=http://localhost:5173
